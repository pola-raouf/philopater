<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= pageTitle || 'Sign IN' %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/Sign-in.css" />
</head>
<body>

  <%- include('./partials/header.ejs') %>

  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
    <div class="alert alert-error">
      <p class="error-message"><%= errorMessage %></p>
    </div>
  <% } %>

  <div class="auth-container">
    <div class="welcome-section">
      <h1 class="welcome-title">JOIN US!</h1>
    </div>

    <div class="signin-box">
      <div class="form-content">
        <h1 class="signin-title">Sign Up</h1>

        <form action="/signin" method="POST" class="signup-form" id="signupForm">
          <div class="input-group">
            <div class="input-field">
              <label for="fullName">Full Name</label>
              <input 
                type="text" 
                id="fullName"
                name="fullName" 
                placeholder="Enter your full name" 
                required
              />
              <div class="error-message" id="nameError"></div>
            </div>

            <div class="input-field">
              <label for="email">Email</label>
              <input 
                type="email" 
                id="email"
                name="email" 
                placeholder="Enter your email" 
                required
              />
              <div class="error-message" id="emailError"></div>
            </div>

            <div class="input-field">
              <label for="password">Password</label>
              <div class="password-wrapper">
                <input 
                  type="password" 
                  id="password"
                  name="password" 
                  placeholder="Create a password" 
                  required
                />
                <i class="fas fa-eye-slash toggle-password" id="togglePassword"></i>
              </div>
              <div class="error-message" id="passwordError"></div>
            </div>

            <div class="input-field">
              <label for="confirmPassword">Confirm Password</label>
              <div class="password-wrapper">
                <input 
                  type="password" 
                  id="confirmPassword"
                  name="confirmPassword" 
                  placeholder="Confirm your password" 
                  required
                />
                <i class="fas fa-eye-slash toggle-password" id="toggleConfirmPassword"></i>
              </div>
              <div class="error-message" id="confirmPasswordError"></div>
            </div>
          </div>

          <div class="requirements-box">
            <h3>Password Requirements:</h3>
            <ul class="password-requirements">
              <li id="req-length">At least 8 characters</li>
              <li id="req-number">Contains a number</li>
              <li id="req-special">Contains a special character</li>
              <li id="req-upper">Contains an uppercase letter</li>
            </ul>
          </div>

          <button type="submit" class="signin-button" id="submitButton">
            <span class="button-text">Sign Up</span>
            <i class="fas fa-spinner fa-spin loading-icon" id="loadingIcon" style="display: none;"></i>
          </button>
        </form>

        <div class="auth-footer">
          <p class="login-text">Already have an account? <a href="/login">Log In</a></p>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/Sign-in.js"></script>
</body>
</html>