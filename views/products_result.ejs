<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>search list</h1>
  <p>result<strong><%= search %></strong></p>

  <% if (products && products.length > 0) { %>
    <ul>
      <% products.forEach(product => { %>
        <li>
          <strong><%= product.name %></strong><br> - $<%= product.price %> - <%= product.category %>
          <% if (product.image) { %>
            <br>
            <img src="/image/<%= product.image %>" alt="<%= product.name %>" width="100" />
          <% } %>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p> pola</p>
  <% } %>
</body>
</html>
