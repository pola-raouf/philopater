<!DOCTYPE html>
<html>
<head>
  <title>User Search</title>
  <link rel="stylesheet" href="../public/css/result.css" />
</head>
<body>

  <h2>Search Users</h2>
  <form method="GET" action="/search">
    <input type="text" name="username" value="<%= search || '' %>" placeholder="Enter username..." />
    <button type="submit">Search</button>
  </form>

  <% if (users.length === 0) { %>
    <p>No users found.</p>
  <% } %>

  <% users.forEach(user => { %>
    <div class="card">
      <h3><%= user.username %></h3>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Admin:</strong> <%= user.admin ? 'Yes' : 'No' %></p>
      <p><strong>Joined:</strong> <%= user.createdAt.toDateString() %></p>
    </div>
    <br>
  <% }); %>

</body>
</html>
